{
  "name": "resource-monitor",
  "version": "1.0.0",
  "description": "Monitoring system for ZimaOS and other resources with alerts and statistics",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:commit": "npm run build && git add -f client/build/ && git commit -m 'Auto-commit built React app' && git push",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["monitoring", "uptime", "alerts", "dashboard"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "better-sqlite3": "^9.2.2",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1",
    "ping": "^0.4.4",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
